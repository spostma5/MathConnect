<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kyoukasuigetsu.mathconnect.ProfileActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_EnterField"
        android:id="@+id/editText"
        android:text="spostma5@uwo.ca"
        android:gravity="center"
        android:textAlignment="gravity"
        android:enabled="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/change_photo_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Button"
        android:text="Change Password"
        android:onClick="gotoChangePass"
        android:id="@+id/change_password_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Button"
        android:text="Change Profile Picture"
        android:onClick="gotoChangePic"
        android:id="@+id/change_photo_button"
        android:layout_above="@+id/change_password_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editText">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:id="@+id/imageView4"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="center_vertical|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_row="8"
            android:layout_column="2" />

        <EditText
            style="@style/Text_EnterField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="spostma5"
            android:gravity="center"
            android:textAlignment="gravity"
            android:enabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/change_photo_button"
            android:layout_gravity="center_horizontal"
            android:layout_row="9"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_row="10"
            android:layout_column="2" />

    </GridLayout>

</RelativeLayout>
